"""
Slate AI Health Platform - Main Application

Full production version with database, AI, and all features.
"""

from fastapi import FastAPI, HTTPException
from fastapi.middleware.cors import CORSMiddleware
from contextlib import asynccontextmanager
from sqlalchemy import text
import os

from .config import settings

@asynccontextmanager
async def lifespan(app: FastAPI):
    """Application lifespan manager"""
    print("üöÄ Starting Slate AI Health Platform...")
    print(f"üåç Environment: {settings.RAILWAY_ENVIRONMENT}")
    print(f"üîß Debug mode: {settings.DEBUG}")
    
    # Try to initialize database (but don't fail if it doesn't work)
    try:
        from .database import sync_engine, Base
        print(f"üîç Attempting to connect to database...")
        print(f"üîç Database URL: {settings.DATABASE_URL[:50]}...")  # Show first 50 chars for security
        
        # Test connection first
        with sync_engine.connect() as conn:
            result = conn.execute(text("SELECT 1"))
            print("‚úÖ Database connection test successful")
        
        Base.metadata.create_all(bind=sync_engine)
        print("‚úÖ Database tables created successfully")
        app.state.database_available = True
    except Exception as e:
        print(f"‚ö†Ô∏è  Database initialization failed: {e}")
        print(f"‚ö†Ô∏è  Error type: {type(e).__name__}")
        print("‚ö†Ô∏è  Server will start but database features may not work properly")
        app.state.database_available = False
    
    # Test OpenAI connection (optional)
    if settings.OPENAI_API_KEY and settings.OPENAI_API_KEY != "your_openai_api_key_here":
        try:
            from openai import OpenAI
            client = OpenAI(api_key=settings.OPENAI_API_KEY)
            response = client.models.list()
            print("‚úÖ OpenAI API connection successful!")
            app.state.openai_available = True
        except Exception as e:
            print(f"‚ö†Ô∏è  OpenAI API connection failed: {e}")
            print("‚ö†Ô∏è  Server will start but AI features may not work properly")
            app.state.openai_available = False
    else:
        print("‚ö†Ô∏è  No valid OpenAI API key provided - AI features will be disabled")
        app.state.openai_available = False
    
    print("‚úÖ Slate AI Health Platform is ready! (v1.1.5 - Complete Chat Flow - ROLLBACK VERSION)")
    
    yield
    
    print("üõë Shutting down Slate AI Health Platform...")

# Create FastAPI app
app = FastAPI(
    title="Slate AI Health Platform",
    description="Personalized fitness and nutrition coaching platform",
    version="1.0.0",
    lifespan=lifespan
)

# Add CORS middleware with production-ready settings
app.add_middleware(
    CORSMiddleware,
    allow_origins=settings.ALLOWED_ORIGINS,
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# Include routers (but don't fail if they don't load)
print("üîç Loading API routers...")

# Load each router individually to handle failures gracefully
routers_loaded = 0
total_routers = 4

try:
    print("  üîç Importing chat router...")
    from .routes import chat
    app.include_router(chat.router, prefix="/api/v1/chat", tags=["chat"])
    print("  ‚úÖ Chat router loaded")
    routers_loaded += 1
except Exception as e:
    print(f"  ‚ùå Chat router failed to load: {e}")

try:
    print("  üîç Importing workouts router...")
    from .routes import workouts
    app.include_router(workouts.router, prefix="/api/v1/workout", tags=["workouts"])
    print("  ‚úÖ Workouts router loaded")
    routers_loaded += 1
except Exception as e:
    print(f"  ‚ùå Workouts router failed to load: {e}")

try:
    print("  üîç Importing nutrition router...")
    from .routes import nutrition
    app.include_router(nutrition.router, prefix="/api/v1/nutrition", tags=["nutrition"])
    print("  ‚úÖ Nutrition router loaded")
    routers_loaded += 1
except Exception as e:
    print(f"  ‚ùå Nutrition router failed to load: {e}")

try:
    print("  üîç Importing users router...")
    from .routes import users
    app.include_router(users.router, prefix="/api/v1/user", tags=["users"])
    print("  ‚úÖ Users router loaded")
    routers_loaded += 1
except Exception as e:
    print(f"  ‚ùå Users router failed to load: {e}")

if routers_loaded == total_routers:
    print("‚úÖ All routers loaded successfully")
else:
    print(f"‚ö†Ô∏è  {routers_loaded}/{total_routers} routers loaded successfully")
    print("‚ö†Ô∏è  Server will start but some endpoints may not work")

@app.get("/")
async def root():
    """Root endpoint"""
    return {
        "message": "Welcome to Slate AI Health Platform",
        "version": "1.0.0",
        "status": "running",
        "environment": settings.RAILWAY_ENVIRONMENT,
        "database_available": getattr(app.state, 'database_available', False),
        "openai_available": getattr(app.state, 'openai_available', False)
    }

@app.get("/health")
async def health_check():
    """Health check endpoint"""
    return {
        "status": "healthy",
        "message": "Slate AI Health Platform is running",
        "environment": settings.RAILWAY_ENVIRONMENT,
        "database_available": getattr(app.state, 'database_available', False),
        "openai_available": getattr(app.state, 'openai_available', False)
    }

@app.get("/test")
async def test():
    """Test endpoint"""
    return {"test": "success"}

@app.get("/status")
async def status():
    """Detailed status endpoint"""
    return {
        "app": "running",
        "database": "available" if getattr(app.state, 'database_available', False) else "unavailable",
        "openai": "available" if getattr(app.state, 'openai_available', False) else "unavailable",
        "environment": settings.RAILWAY_ENVIRONMENT
    }

if __name__ == "__main__":
    import uvicorn
    port = int(os.getenv("PORT", 8000))
    uvicorn.run(app, host="0.0.0.0", port=port) # Force deployment update
